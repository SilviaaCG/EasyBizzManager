<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="3dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/itemFacturaNumeroFactura"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/abeezee"
                android:padding="16dp"
                android:text="@string/numero_de_factura"
                android:textAlignment="textStart"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/itemFacturaEstado"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/abeezee"
                android:padding="16dp"
                android:text="@string/estado_factura"
                android:textAlignment="center"
                android:background="@drawable/color_transparente"
                />
            <TextView
                android:id="@+id/itemFacturaFecha"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/abeezee"
                android:padding="16dp"
                android:text="@string/fecha_factura"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:drawableEnd="@drawable/ic_calendario"
                />

        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/itemFacturaCliente"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/abeezee"
            android:padding="16dp"
            android:text="@string/factura_cliente_nombre"
            android:textAlignment="textStart"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/itemFacturaPrecioTotal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/abeezee"
            android:padding="16dp"
            android:text="@string/factura_precio"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:drawableEnd="@drawable/ic_dinero_dolar"/>

        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/facturaLayoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/color_transparente"
        android:visibility="gone">

        <Space
            android:layout_width="11dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/agregarPagoFacturaButtom"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/baseline_facturas_24"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/InfoFacturaButton"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/baseline_info_24"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/enviarFacturaButton"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_enviar"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>