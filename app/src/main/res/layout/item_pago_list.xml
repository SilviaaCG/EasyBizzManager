<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/fondo_redondo_blanco2"
    android:layout_margin="2dp">


    <TextView
        android:id="@+id/fechaTextView"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="@string/fecha"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:background="@drawable/label_azul"
        android:textColor="@color/white"
        android:padding="5dp"
        android:fontFamily="@font/abeezee"
        tools:ignore="RtlCompat" />
    <TextView
        android:id="@+id/metodoPagoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/metodo_de_pago"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        tools:ignore="RtlCompat" />
    <TextView
        android:id="@+id/precioTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/precio"
        android:textSize="16dp"
        android:gravity="center_vertical"
        android:textAlignment="textEnd"
        android:drawablePadding="5dp"
        android:drawableEnd="@drawable/euro_16"
        tools:ignore="RtlCompat" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/eliminarPago"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/x"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:backgroundTint="@color/rojo"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        />
</LinearLayout>